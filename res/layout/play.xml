	<TextView 
	    android:id="@+id/play1"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play2"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play3"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play4"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play5"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play6"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/play7"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>
