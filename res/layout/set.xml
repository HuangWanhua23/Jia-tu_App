<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="#00BFFF"
        android:orientation="horizontal">	    
   	 <Button
        android:id="@+id/return1"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginLeft="2dp"
        android:background="@drawable/i23"/>
   	 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/return1"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="1dp"
        android:textSize="21sp"
        android:text="设置"/> 
     </LinearLayout>   
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="#E0E0E0"
        android:orientation="horizontal">	
      <TextView   
         android:layout_width="fill_parent" 
       	 android:layout_height="27dp"   
       	 android:textSize="14sp"
       	 android:textColor="#9D9D9D"
       	 android:layout_marginLeft="12dp"
         android:layout_marginTop="6dp"
      	 android:text="系统设置"/>
     </LinearLayout> 
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/usernumber"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="15sp"
        	android:text="零流量浏览"/>
         <TextView 
            android:id="@+id/usernumber1"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="32dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="12sp"
        	android:textColor="#9D9D9D"
        	android:text="开启后，非wifi环境下省略或缩小图片"/>
		<Switch 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="270dp"/>
    </RelativeLayout>
    <ImageView   
        android:layout_width="fill_parent" 
        android:layout_marginTop="5dp" 
        android:layout_height="2dp"  
        android:background="#E0E0E0"/>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/usernumber"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="6dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="15sp"
        	android:text="零流量升级"/> 
        <TextView 
            android:id="@+id/usernumber1"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="32dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="12sp"
        	android:textColor="#9D9D9D"
        	android:text="开启后，wifi下自动下载新版本安装包"/>
        <Switch 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="270dp"/>
    </RelativeLayout>
    <ImageView   
        android:layout_width="fill_parent" 
        android:layout_marginTop="5dp" 
        android:layout_height="2dp"  
        android:background="#E0E0E0"/>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/usernumber"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="6dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="15sp"
        	android:text="新消息通知"/> 
        <TextView 
            android:id="@+id/usernumber1"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="32dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="12sp"
        	android:textColor="#9D9D9D"
        	android:text="服务信息，推送信息"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
			android:layout_marginLeft="352dip"
            android:layout_marginTop="8dip"
        	android:background="@drawable/q"/> 
    </RelativeLayout>
     <ImageView   
        android:layout_width="fill_parent" 
        android:layout_marginTop="5dp" 
        android:layout_height="2dp"  
        android:background="#E0E0E0"/>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/usernumber"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="12dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="15sp"
        	android:textColor="#00BFFF"
        	android:text="清除缓存(1.01MB)"/> 
    </RelativeLayout>
     <ImageView   
        android:layout_width="fill_parent" 
        android:layout_marginTop="5dp" 
        android:layout_height="15dp"  
        android:background="#E0E0E0"/>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/usernumber"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="8dp"
        	android:layout_marginLeft="12dp"
        	android:textSize="15sp"
        	android:text="关于"/> 
        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
			android:layout_marginLeft="352dip"
            android:layout_marginTop="8dip"
        	android:background="@drawable/q"/> 
    </RelativeLayout>
    <ImageView   
        android:layout_width="fill_parent" 
        android:layout_marginTop="1dp" 
        android:layout_height="2dp"  
        android:background="#E0E0E0"/>
</LinearLayout>
